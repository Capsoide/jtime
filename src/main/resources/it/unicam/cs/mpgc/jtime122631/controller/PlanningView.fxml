<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.unicam.cs.mpgc.jtime122631.controller.PlanningController"
      spacing="20.0" styleClass="content-area">

    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox>
            <Label text="Pianificazione Giornaliera" styleClass="header-label"/>
            <Label fx:id="totalTimeLabel" text="Totale stimato: 0h 0m" style="-fx-text-fill: #64748b; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        </VBox>

        <HBox HBox.hgrow="ALWAYS"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="&lt;" onAction="#handlePrevDay" styleClass="secondary-button"/>
            <DatePicker fx:id="datePicker" prefWidth="150"/>
            <Button text="&gt;" onAction="#handleNextDay" styleClass="secondary-button"/>
            <Button text="OGGI" onAction="#handleToday" styleClass="action-button"/>
        </HBox>
    </HBox>

    <StackPane VBox.vgrow="ALWAYS"
               style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 20, 0, 0, 5);">

        <TableView fx:id="planningTable" style="-fx-background-radius: 15;">
            <columns>
                <TableColumn fx:id="colTitle" text="ATTIVITÀ" prefWidth="200" style="-fx-alignment: CENTER_LEFT;"/>

                <TableColumn fx:id="colPriority" text="PRIORITÀ" prefWidth="120.0" style="-fx-alignment: CENTER;"/>

                <TableColumn fx:id="colStatus" text="STATO" prefWidth="100" style="-fx-alignment: CENTER;"/>

                <TableColumn fx:id="colEstimated" text="STIMA" prefWidth="100" style="-fx-alignment: CENTER;"/>

                <TableColumn fx:id="colActual" text="EFFETTIVO" prefWidth="100" style="-fx-alignment: CENTER;"/>

                <TableColumn fx:id="colActions" text="AZIONI" prefWidth="140" style="-fx-alignment: CENTER;" sortable="false"/>
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>

            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </TableView>

    </StackPane>

</VBox>