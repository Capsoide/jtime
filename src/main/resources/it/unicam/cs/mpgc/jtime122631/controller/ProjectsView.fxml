<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.unicam.cs.mpgc.jtime122631.controller.ProjectsController"
      spacing="30.0" styleClass="content-area">

    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox>
            <Label text="Progetti" styleClass="header-label"/>
            <Label text="Gestisci e monitora le tue attivitÃ " style="-fx-text-fill: #64748b; -fx-font-size: 14px;"/>
        </VBox>

        <HBox HBox.hgrow="ALWAYS"/>
        <Button text="+ NUOVO PROGETTO" onAction="#handleAddProject" styleClass="action-button"/>
    </HBox>

    <StackPane VBox.vgrow="ALWAYS"
               style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 20, 0, 0, 5);">

        <TableView fx:id="projectsTable" style="-fx-background-radius: 15;">
            <columns>
                <TableColumn fx:id="colName" text="NOME PROGETTO" prefWidth="250"
                             styleClass="col-left"/>

                <TableColumn fx:id="colDescription" text="DESCRIZIONE" prefWidth="400"
                             styleClass="col-left"/>

                <TableColumn fx:id="colStatus" text="STATO" prefWidth="150"
                             styleClass="col-center"/>

                <TableColumn fx:id="colActions" text="AZIONI" prefWidth="200" sortable="false"
                             styleClass="col-center"/>
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>

            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </TableView>

    </StackPane>

</VBox>