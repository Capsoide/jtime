<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" styleClass="content-area"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.unicam.cs.mpgc.jtime122631.controller.ProjectDetailsController">

    <HBox alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
        <Button text="← Torna ai Progetti" onAction="#handleBack" styleClass="secondary-button"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox>
            <Label fx:id="projectNameLabel" text="Nome Progetto" styleClass="header-label"/>
            <Label fx:id="projectDescLabel" text="Descrizione del progetto..." style="-fx-text-fill: #64748b;"/>
        </VBox>

        <HBox HBox.hgrow="ALWAYS"/>

        <Button text="+ NUOVA ATTIVITÀ" onAction="#handleAddTask" styleClass="action-button"/>
    </HBox>

    <StackPane VBox.vgrow="ALWAYS"
               style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 20, 0, 0, 5);">

        <TableView fx:id="tasksTable" style="-fx-background-radius: 15;">
            <columns>
                <TableColumn fx:id="colTitle" text="ATTIVITÀ" prefWidth="250" />

                <TableColumn fx:id="colStatus" text="STATO" prefWidth="120" styleClass="col-center"/>
                <TableColumn fx:id="colEstimated" text="STIMA" prefWidth="100" styleClass="col-center"/>
                <TableColumn fx:id="colActual" text="EFFETTIVO" prefWidth="100" styleClass="col-center"/>
                <TableColumn fx:id="colDate" text="DATA" prefWidth="120" styleClass="col-center"/>

                <TableColumn fx:id="colActions" text="AZIONI" prefWidth="260" minWidth="260" maxWidth="300" sortable="false" styleClass="col-center"/>
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>

            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </TableView>

    </StackPane>

</VBox>